<script>
    document.getElementById('profilePicForm').addEventListener('change', async function (e) {
        e.preventDefault()

        const input = document.getElementById('profileImageInput')
        const profileImage = input.files[0]
        if(!profileImage) return

        const formData = new FormData()
        formData.append('profileImage', profileImage)

        try {
            const response = await fetch('/update-profile-pic', {
                method: 'POST',
                body: formData
            })

            const result = await response.json()
            if(response.ok){
                 document.getElementById('profileImagePreview').src = `/images/${result.profileImage}? t=${Date.now()}`
            }else{
                Swal.fire({
                    icon: 'error',
                    title: 'Oops',
                    text: result.message || 'Something went wrong'
                })
            }
        } catch (error) {
            Swal.fire({
                icon:'error',
                title: 'Error',
                text: error.message || 'Internal server error'
            })
        }
    })
</script>
<script>
    document.getElementById('updateProfileForm').addEventListener('submit', async function (e) {
        e.preventDefault()

        const name = document.getElementById('name')
        const phone = document.getElementById('phone')
        const genderInput = document.getElementsByName('gender')

        const nameError = document.getElementById('name-error')
        const phoneError = document.getElementById('phone-error')
        const genderError = document.getElementById('gender-error')

        nameError.textContent = ''
        phoneError.textContent = ''
        genderError.textContent = ''
        name.classList.remove('is-invalid')
        phone.classList.remove('is-invalid')

        let isValid = true

        if(!name.value.trim()){
            nameError.textContent = 'Name is required!'
            name.classList.add('is-invalid')
            isValid = false
        }

        const phonePattern = /^[6-9]\d{9}$/
        if(!phone.value.trim() || !phonePattern.test(phone.value.trim())){
            phoneError.textContent = 'Enter a valid 10 digit phone number'
            phone.classList.add('is-invalid')
            isValid = false
        }

        let genderSelected = false
        for(let input of genderInput){
            if(input.checked){
                genderSelected = true
                break
            }
        }
        if(!genderSelected){
            genderError.textContent = 'Please select your gender'
            isValid = false
        }

        if(!isValid){
            return
        }

        let gender = ''
        for(let input of genderInput){
            if(input.checked){
                gender = input.value
                break
            }
        }

        try {
            const response = await fetch('/update-profile', {
                method: 'POST',
                headers: {
                    'content-type' : 'application/json'
                },
                body: JSON.stringify({
                    name: name.value.trim(),
                    phone: phone.value.trim(),
                    gender
                })
            })

            const result = await response.json()
            if(response.ok && result.success){
                Swal.fire({
                    icon: 'success',
                    title: 'Profile Updated',
                    text: 'Your profile updated successfully',
                    timer: 1200,
                    showConfirmButton: false
                })
                .then(()=>{
                    window.location.href = '/userProfile'
                })
            }else{
                Swal.fire({
                    icon:'error',
                    title: 'OOps!',
                    text: result.message || 'Something went wrong',
                    timer: 1200,
                    showConfirmButton: false
                })
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'Internal server error'
            })
        }
    })
</script>
<script>
    document.getElementById('changePasswordForm').addEventListener('submit', async function (e) {
        e.preventDefault()

        const currentPassword = document.getElementById('currentPassword')
        const newPassword = document.getElementById('newPassword')
        const confirmPassword = document.getElementById('confirmPassword')

        const currentPassError = document.getElementById('currentpass-error')
        const newPassError = document.getElementById('newpass-error')
        const confirmPassError = document.getElementById('confirmpass-error')

        currentPassword.classList.remove('is-invalid')
        newPassword.classList.remove('is-invalid')
        confirmPassword.classList.remove('is-invalid')

        currentPassError.textContent = ''
        newPassError.textContent = ''
        confirmPassError.textContent = ''

        let isValid = true

        const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/

        if(!currentPassword.value.trim()){
            currentPassError.textContent = 'Please enter your current password!'
            currentPassword.classList.add('is-invalid')
            isValid = false
        }

        if(!newPassword.value.trim() || !passwordPattern.test(newPassword.value.trim())){
            newPassError.textContent = 'Please enter valid password'
            newPassword.classList.add('is-invalid')
            isValid = false
        }

        if(!confirmPassword.value.trim() || confirmPassword.value.trim() !== newPassword.value.trim() ){
            confirmPassError.textContent = 'New password and cofirm password must be same'
            confirmPassword.classList.add('is-invalid')
            isValid = false
        }

        if(!isValid){
            return
        }

        try {
            const response = await fetch('/change-password', {
                method: 'POST',
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({
                    currentPassword: currentPassword.value.trim(),
                    newPassword : newPassword.value.trim(),
                    confirmPassword: confirmPassword.value.trim()
                })
            })
            
            const result = await response.json()

            if(response.ok && result.success){
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Password changed',
                    timer: 1200,
                    showConfirmButton: false
                })
                .then(()=>{
                    window.location.href = '/userProfile'
                })
            }else{
                Swal.fire({
                    icon: 'error',
                    title: 'Oops',
                    text:result.message || 'Something went wrong',
                    timer: 1200,
                    showConfirmButton: false
                })
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message || 'Internal server error'
            })
        }
    })

</script>
