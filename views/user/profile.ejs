<style>
    .profile-pic-wrapper {
        position: relative;
        display: inline-block;
    }
    .edit-icon {
        position: absolute;
        bottom: 0;
        right: 0;
        background-color: #ffffff;
        border-radius: 50%;
        padding: 6px;
        cursor: pointer;
    }
    .edit-icon i {
        font-size: 16px;
        color: #000;
    }
    .hidden-file-input {
        display: none;
    }
    .error-message {
        color: red;
    }
</style>
<!-- <link rel="stylesheet" href="/css/userprofile.css"> -->
<div class="conatiner mt-5 mb-5">
    <div class="row">
        <!-- sidebar -->
         <div class="col-md-3">
              <%- include("../../views/partials/user/sidebar") %>
         </div>
         <!-- Profile information -->
          <div class="col-md-9">
            <h4 class="mb-4">Personal Information</h4>
            <!-- profile image -->
            <!-- Profile Picture Update Form -->
            <div class="text-center mb-3">
                <form enctype="multipart/form-data" id="profilePicForm">
                    <div class="profile-pic-wrapper">
                        <img src="<%= user.profileImage ? ('/images/'+user.profileImage) : '/images/user-profile.png' %>" class="rounded-circle" width="120" height="120" alt="profile image" id="profileImagePreview">
                        <label class="edit-icon">
                            <i class="bi bi-pencil-fill"></i>
                            <input type="file" name="profileImage" accept="image/*" class="hidden-file-input" id="profileImageInput" onchange="document.getElementById('profilePicForm').submit();" />
                        </label>
                    </div>
                </form>
            </div>
             <form id="updateProfileForm">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" value="<%= user.name %>" id="name" name="name" class="form-control">
                    <div class="error-message" id="name-error"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" value="<%= user.email %>" class="form-control" disabled>
                     <a href="/change-email" class="btn btn-sm btn-link">Change Email</a>
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input type="tel" name="phone" id="phone" value="<%= user.phone %>" class="form-control">
                    <div class="error-message" id="phone-error"></div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Gender</label><br/>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="gender" class="form-check-input" value="Male" <%= user.gender === 'Male' ? 'checked' : '' %> id="">
                        <label class="form-check-label">Male</label>
                    </div>
                     <div class="form-check form-check-inline">
                        <input type="radio" name="gender" class="form-check-input" value="Female" <%= user.gender === 'Female' ? 'checked' : '' %> id="">
                        <label class="form-check-label">Female</label>
                    </div>
                    <div class="error-message" id="gender-error"></div>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
             </form>

                   <!-- Change Password -->
      <hr class="my-4"/>
      <h5>Change Password</h5>
      <form id="changePasswordForm">
        <div class="mb-3">
          <label>Current Password</label>
          <input type="password" id="currentPassword" name="currentPassword" class="form-control" />
          <div class="error-message" id="currentpass-error"></div>
        </div>
        <div class="mb-3">
          <label>New Password</label>
          <input type="password" id="newPassword" name="newPassword" class="form-control" />
          <div class="error-message" id="newpass-error"></div>
        </div>
        <div class="mb-3">
          <label>Confirm New Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" />
          <div class="error-message" id="confirmpass-error"></div>
        </div>
        <button type="submit" class="btn btn-secondary">Update Password</button>
      </form>
          </div>
    </div>
</div>
