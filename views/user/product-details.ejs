<!-- Put this in your <head> section -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />


<style>
  .main {
    background-color: #f5f5f5;
    padding: 20px 0;
  }

  .product-gallery-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .main-image img {
    width: 100%;
    max-width: 450px;
    height: 400px;
    object-fit: contain;
    border: 1px solid #ddd;
    border-radius: 6px;
  }

  .thumbnail-row {
    display: flex;
    gap: 10px;
    margin-top: 15px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .thumbnail {
    width: 70px;
    height: 70px;
    object-fit: contain;
    cursor: pointer;
    border: 2px solid transparent;
    border-radius: 5px;
    transition: 0.2s;
  }

  .thumbnail:hover {
    border-color: #ff6b6b;
  }

  .size-btn {
    padding: 8px 16px;
    margin: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background: #fff;
    cursor: pointer;
  }

  .size-btn.selected {
    background: #333;
    color: white;
    border-color: #333;
  }

  .product-extra-link2 .button {
    margin-top: 10px;
    background-color: #ff6b6b;
    border: none;
    padding: 10px 20px;
    color: white;
    border-radius: 4px;
    cursor: pointer;
  }

  .product-extra-link2 .button:hover {
    background-color: #e55353;
  }

</style>
<script src="https://unpkg.com/js-image-zoom@0.4.1/js-image-zoom.js" type="application/javascript"></script>
<main class="main">
  <div class="container">
    <div class="row">
      <!-- Left: Product Image Gallery -->
      <div class="col-md-6">
        <div class="product-gallery-container">
          <div class="main-image" id="main-image-container">
            <img id="mainPreview" src="<%= product.productImage[0] %>" alt="Main product image" />
          </div>
          <div class="thumbnail-row">
            <% product.productImage.forEach((img, index) => { %>
              <img class="thumbnail" src="<%= img %>" onclick="previewImage('<%= img %>')" alt="Thumbnail <%= index + 1 %>" />
            <% }) %>
          </div>
        </div>
      </div>

      <!-- Right: Product Info -->
      <div class="col-md-6 pt-3">
        <h2 class="fw-bold"><%= product.name %></h2>
        <p class="text-muted"><%= product.description %></p>
        <p class="text-muted"><strong class="text-dark">Brand:</strong> <%= product.brand.brandName %></p>
        <p class="text-muted"><strong class="text-dark">Category:</strong> <%= category.name %></p>

        <div class="d-flex align-items-center mb-3">
          <h4 class="text-success fw-bold me-3 mb-0">â‚¹<%= product.salePrice %></h4>
            <% if(product.salePrice !== product.regularPrice) { %>
              <span class="text-muted text-decoration-line-through me-2">â‚¹<%= product.regularPrice %></span>
            <% } %>
          
            <%
              const regular = product.regularPrice;
              const sale = product.salePrice;
              const discount = regular > sale ? Math.round(((regular - sale) / regular) * 100) : null;
            %>
            <p class="text-dark">
              <% if (discount) { %>
                <span class="badge bg-warning ms-2 fs-m"><%= discount %>% OFF</span>
              <% } %>
            </p>
        </div>

        <p class="mb-3">
          <% if(totalStock > 0) { %>
            <span style="color:green;">In Stock</span>
          <% } else { %>
            <span style="color:red;">Out of Stock</span>
          <% } %>
        </p>

        <!-- Variant Sizes -->
        <div>
          <p><strong>Select Size:</strong></p>
          <% variants.forEach(variant => { %>
            <button class="size-btn" 
                    data-size="<%= variant.size %>" 
                    data-price="<%= variant.salePrice %>" 
                    data-variant-id="<%= variant._id %>">
              <%= variant.size %>
            </button>
          <% }) %>
        </div>

        <div class="product-extra-link2">
          <input type="hidden" id="selectedSize" />
          <button class="btn btn-success px-4 add-to-cart" data-product-id="<%= product._id %>" id="cartButton">
            <i class="fa fa-shopping-cart me-1"></i> Add to Cart
          </button>
           <button class="btn btn-outline-primary px-4 wishlist ps-4" data-item-id="<%= product._id %>" id="wishlistButton">
             <i class="fa fa-heart me-1"></i> Wishlist
            </button>
        </div>

        <!-- Policies -->
        <ul style="margin-top: 20px;">
          <li>âœ… 1 Year Brand Warranty</li>
          <li>ðŸ”„ 30 Day Return Policy</li>
          <li>ðŸ’° Cash on Delivery available</li>
        </ul>
      </div>
    </div>

    <!-- Related Products -->
    <div class="mt-5">
      <h4>Related Products</h4>
      <div class="swiper trending-swiper">
        <div class="swiper-wrapper">
        <% relatedProducts.forEach(item => { %>
          <div class="swiper-slide">
            <div style="border:1px solid #ddd; padding:10px; border-radius:5px;">
              <a class="text-decoration-none text-dark" href="/productDetails?id=<%= item._id %>">
                <img src="<%= item.productImage[0] %>" alt="<%= item.name %>" style="width:100%; height:180px; object-fit:contain;">
                <h6 class="mt-2"><%= item.name %></h6>
                <p>â‚¹<%= item.salePrice %>
                  <% if(item.salePrice !== item.regularPrice) { %>
                    <span style="text-decoration: line-through; color:grey;">â‚¹<%= item.regularPrice %></span>
                  <% } %>
                </p>
              </a>
            </div>
          </div>
        <% }) %>
        </div>
                  <!-- add arrows -->
     <div class="swiper-button-next"></div>
     <div class="swiper-button-prev"></div>
      </div>
    </div>
  </div>
</main>

  <!-- Bootstrap Bundle JS (includes Popper) -->
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
