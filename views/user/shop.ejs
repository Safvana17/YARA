<%
  function buildQuery(newParams) {
    const currentParams = {
      category: selectedCategory,
      brand: selectedBrand,
      gt: priceRange?.gt,
      lt: priceRange?.lt,
      sortBy: sortBy,
      query: query
    };
    return Object.entries({ ...currentParams, ...newParams })
      .filter(([key, value]) => value !== null && value !== undefined && value !== '')
      .map(([key, value]) => `${key}=${value}`)
      .join('&');
  }
%>

