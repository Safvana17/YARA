   <style>
      .btn {
      display: inline-block;
      padding: 12px 20px;
      font-size: 16px;
      font-weight: bold;
      color: #fff;
      background-color: #ff6b6b;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.3s;
      cursor: pointer;
      text-align: center;
  }


  .btn:hover {
      background-color: #ff4c4c;
      transform: translateY(-2px);
  }


  .btn:active {
      transform: translateY(1px);
  }
  .wishlist-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: rgba(255, 255, 255, 0.8);
      padding: 10px;
      border-radius: 50%;
      color: #ff6b6b;
      font-size: 18px;
      z-index: 10;
      transition: background-color 0.3s, color 0.3s, transform 0.3s;
  }


  .wishlist-btn:hover {
      background-color: rgba(255, 255, 255, 1);
      color: #ff4c4c;
      transform: translateY(-2px);
  }


  .wishlist-btn:active {
      transform: translateY(1px);
  }
   .section-title h2 {
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 30px;
    color: #252525;
  }
   
  .product-img-action-wrap {
      position: relative;
  }


  .product-img {
      position: relative;
      display: block;
      overflow: hidden;
      width: 100%;
      height: 250px;
      border-radius: 5px;
  }
  .product-img img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 5px;
  }


  .product-cart-wrap {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    transition: box-shadow 0.3s ease;
    background-color: #fff;
    height: 100%;
  }
  .product-cart-wrap:hover {
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

    .product-content-wrap {
    padding-top: 10px;
    text-align: center;
  }
   .product-content-wrap h6 {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin: 10px 0 5px;
    height: 40px;
    overflow: hidden;
  }


  .product-content-wrap h5 {
      font-size: 1.1rem;
      color: #ff6b6b;
      margin-bottom: 10px;
  }


  .product-content-wrap a {
      display: inline-block;
      padding: 8px 12px;
      background-color: #ff6b6b;
      color: white;
      text-transform: uppercase;
      font-size: 14px;
      border-radius: 4px;
      text-decoration: none;
  }


  .product-content-wrap a:hover {
      background-color: #ff4c4c;
  }
  .single-slider-img img {
    max-height: 520px; /* adjust this value as needed */
    object-fit: cover;
}
.brand-section {
  padding: 40px 0;
  background-color: #f5f4f4;
}

.brand-logo {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  gap: 30px;
}

.brand-logo img {
  max-width: 120px;
  max-height: 60px;
  object-fit: contain;
  transition: transform 0.3s ease;
  /* filter: grayscale(100%); */
  opacity: 0.8;
}

.brand-logo img:hover {
  transform: scale(1.1);
  filter: grayscale(0%);
  opacity: 1;
}

.promo-poster {
  position: relative;
  height: 300px;
  background-size: cover;
  background-position: center;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s;
}

.promo-poster:hover {
  transform: scale(1.02);
}

.promo-overlay {
  background-color: rgba(0, 0, 0, 0.4);
  padding: 30px;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(2px);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.promo-overlay h3 {
  font-size: 1.8rem;
  font-weight: 600;
}

.swiper-slide {
  display: flex;
  justify-content: center;
  height: auto;
}
/* Positioning and appearance */
.swiper-button-next,
.swiper-button-prev {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5); /* semi-transparent black */
  width: 60px;
  height: 60px;
  border-radius: 50%;
  top: 40%;
  transition: all 0.3s ease;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
}

/* Icon centering */
.swiper-button-next::after,
.swiper-button-prev::after {
  font-size: 18px;
  font-weight: bold;
}

/* Hover effect */
.swiper-button-next:hover,
.swiper-button-prev:hover {
  background-color: #24ddda; /* your theme red-maroon or custom color */
  color: #fff;
}

 @media (max-width: 768px) {
    .product-img img {
      height: 200px;
    }
  }
