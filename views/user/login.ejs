      }
      error4.textContent = "";
      return true;
    }

    document.getElementById("signform").addEventListener("submit", function(e) {
      const valid = [ validateEmail(), validatePassword()];
      if (valid.includes(false)) e.preventDefault();
    });
  </script>
</body>
</html>
