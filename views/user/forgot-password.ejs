<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YARA</title>
    <link rel="stylesheet" href="/css/forgotPassword.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="imageContainer">
            <img src="/images/forgotpass.png" alt="girl shopping">
            <P>Fashion You’ll Love, Prices You’ll Adore</P>
        </div>
        <div class="formSection">
            <h1>YARA</h1>
            <p>Welcome</p>
            <form id="loginForm" action="/forgot-email-valid" method="POST">
                <div>
                   <label for="email">Email</label>
                   <input type="email" name="email" id="email" placeholder="user@gmail.com">
                   <p class="error-message" id="error1"></p>
                </div>
                <%if(locals.message && message.length > 0){%>
                    <div class="alert alert-danger text-center">
                            <%=message%>
                    </div>
                <%}%>
                <button type="submit" class="login-btn">Verify</button>
            </form>

            <div class="signup-link">
               Don't have an account? <a href="/signup">Sign Up</a> <br>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', ()=>{
            let loginForm = document.getElementById('loginForm')
            let userEmail = document.getElementById('email')
            let error1 = document.getElementById('error1')

            loginForm.addEventListener('submit', function(e){
                let valid = true
                if(!userEmail.value.trim()){
                    error1.innerHTML = "Please enter your email"
                    valid = false
                }
                if(!valid){
                   e.preventDefault()
                }
                
            })
        })

    </script>
</body>
</html>